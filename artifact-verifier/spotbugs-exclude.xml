<FindBugsFilter>
    <!-- Configuration by URL needs to use user-provided url -->
    <Match>
        <Class name="com.oracle.macaron.artifactverifier.ArtifactUsageReporterConfiguration"/>
        <Method name="fromConfiguration"/>
        <Bug pattern="URLCONNECTION_SSRF_FD"/>
    </Match>

    <!-- Provenance lookup needs to use user-provided base url for Maven repo -->
    <Match>
        <Class name="com.oracle.macaron.artifactverifier.ProvenanceLookup"/>
        <Method name="lookupProvenance"/>
        <Bug pattern="URLCONNECTION_SSRF_FD"/>
    </Match>
</FindBugsFilter>
